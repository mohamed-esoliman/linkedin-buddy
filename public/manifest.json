{
  "manifest_version": 3,
  "name": "LinkedIn Buddy",
  "description": "LinkedIn Buddy is a Chrome extension designed to streamline LinkedIn profile management. It allows users to save LinkedIn profiles, generate professional connection messages using OpenAI, and manage notes for each profile, enhancing networking efficiency.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "media/linkedIn-buddy-icon-16.png",
      "32": "media/linkedIn-buddy-icon-32.png",
      "48": "media/linkedIn-buddy-icon-48.png",
      "128": "media/linkedIn-buddy-icon-128.png"
    }
  },
  "icons": {
    "16": "media/linkedIn-buddy-icon-16.png",
    "32": "media/linkedIn-buddy-icon-32.png",
    "48": "media/linkedIn-buddy-icon-48.png",
    "128": "media/linkedIn-buddy-icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["media/*"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}